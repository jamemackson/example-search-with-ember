<div class="row">&nbsp;</div>
<div class="row">
  <div class="col">
    <form action="#">
      {{input value=search placeholder="search by version number, ex: 1.0.5" classNames="form-control"}}
    </form>
  </div>
</div>
<div class="row">&nbsp;</div>
<div class="row">
  <div class="col">
    <ul class="list-group list-group-flush">
      {{#each filteredSoftwareTitles as |software|}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{software.name}}<span class="badge badge-primary badge-pill">{{software.version}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
<div class="row justify-content-center">
  <small>displaying {{filteredSoftwareTitles.length}} of {{model.length}} titles</small>
</div>
<div class="row">&nbsp;</div>
<div class="row justify-content-center">
  <a tooltip="link to source code" href="https://github.com/jamemackson/example-search-with-ember" target="_blank" rel="noopener" class="link"><img alt="GitHub Logo" src="github-mark.png"></a>
</div>
